<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">SeaInk</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <BarIcon IconName="IconName.Home" Style="margin-right: 10px"/> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="auth">
                <BarIcon IconName="IconName.UserCheck" Style="margin-right: 10px"/> Log in
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="generate/table">
                <BarIcon IconName="IconName.PlusSquare" Style="margin-right: 10px"/> Generate table
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu() => collapseNavMenu = !collapseNavMenu;

}